<div class="container">
  <h1>Please create a new question for your survey</h1>
  <form action="/surveys/<%=@survey.id%>/questions" method="POST">
    <div>
       <textarea rows="2" cols="40" name="users[question]" placeholder="Write your question here"></textarea>
    </div>
      <hr>
      <textarea rows="4" cols="40" name="users[response1]" placeholder="Response"></textarea>
      <div class="spacer"></div>
      <textarea rows="4" cols="40" name="users[response2]" placeholder="Response"></textarea>
      <div class="spacer"></div>
      <textarea rows="4" cols="40" name="users[response3]" placeholder="Response"></textarea>
      <div class="spacer"></div>
      <textarea rows="4" cols="40" name="users[response4]" placeholder="Response"></textarea>
      <div class="spacer"></div>
    <div>
      <input type="submit" value="Submit"></div>
  </form>
</div>
