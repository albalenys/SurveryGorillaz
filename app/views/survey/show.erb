<!-- needs @survey and @questions objects -->

<h1>Take A Survey</h1>

<p><%= @survey.title %></p>

<% @questions.each do |question| %>
  <p><%= question.content %></p>
  <% choices = question.choices %>
  <div class="question">
    <% choices.each do |choice| %>
      <div class="choice">
        <p><%= choice.content %></p>
      </div>
    <% end %>
  </div>
<% end %>
